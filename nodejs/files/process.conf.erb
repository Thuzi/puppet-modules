start on starting <%= app %>-<%= process.name %>
stop on stopping <%= app %>-<%= process.name %>
respawn

setuid <%= user %>
setgid <%= user %>

script
  . /home/ubuntu/.opdemand
  export NODE_ENV=$APPLICATION_MODE
  export PATH=$PATH:<%= engine.directory %>/node_modules/.bin
  export PORT=<%= port %>
  cd <%= engine.directory %>
  exec <%= process.command %> >> <%= log_root %>/<%=process.name%>-<%=num%>.log 2>&1
end script
