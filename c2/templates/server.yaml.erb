C2_OPERATORS: [ <% @operators.each do |val| -%> "<%= val %>", <% end -%> ]

# url settings
COOKIE_DOMAIN: <%= @domain_name %>
C2SERVER_URL: http://<%= @domain_name %>:<%= @server_port %>
C2PROXY_URL: http://<%= @domain_name %>:<%= @proxy_port %>

# database settings
DATABASE_URL: <%= @database_url %>
DATABASE_USERNAME: <%= @database_username %>
DATABASE_PASSWORD: <%= @database_password %>

# mq settings
RABBITMQ_HOST: <%= @mq_hostname %>
RABBITMQ_PORT: <%= @mq_port %>
RABBITMQ_USER: <%= @mq_username %>
RABBITMQ_PASS: <%= @mq_password %>

# smtp settings
ENABLE_SMTP: <%= @enable_smtp %>
SMTP_HOST: <%= @smtp_hostname %>
SMTP_USERNAME: <%= @smtp_username %>
SMTP_PASSWORD: <%= @smtp_password %>

# zendesk settings
ZENDESK_AUTH_URL: <%= @zendesk_auth_url %>
ZENDESK_AUTH_TOKEN: <%= @zendesk_auth_token %>

# oauth config for github/c2 development
OAUTH_CLIENT_ID: <%= @github_client_id %>
OAUTH_CLIENT_SECRET: <%= @github_client_secret %>

# chargify settings
CHARGIFY_URL: <%= @chargify_url %>
CHARGIFY_APIKEY: <%= @chargify_apikey %>

